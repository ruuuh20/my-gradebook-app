<h3>Enrollments (Registrations)</h3>
<table>
  <tr>
    <th>User ID</th>
    <th>Course ID</th>
  </tr>
  <% @registrations.each do |r| %>
    <tr>
      <td><%= r.user_id %></td>
      <td><%= r.course_id %></td>
    </tr>
  <% end %>
</table>

<h3>Users</h3>
<table>
  <tr>
    <th>Email</th>
    <th>ID</th>
    <th>Course ID</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <td><%= u.email %></td>
      <td><%= u.id %></td>

      <% u.courses.each do |cc| %>
        <td><%= cc.id %></td>
      <% end %>
    </tr>
  <% end %>
</table>


<h3>Courses</h3>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Code</th>
    <th>Semester</th>
  </tr>

    <% @courses.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.code %></td>
        <td><%= c.semester_id %></td>
      </tr>
    <% end %>
</table>
<br>
<br>

