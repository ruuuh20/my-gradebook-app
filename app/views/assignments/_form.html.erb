<h2>Add New</h2>

<%= form_for [@semester, @course, @assignment] do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div class="field">
  <%= f.label :date %>
  <%= f.text_field :date %>
</div>
<div class="field">
  <%= f.label :status %>
  <%= f.text_field :status %>
</div>


<div class="field">
  <%= f.submit 'Create Assignment'%>
</div>
<% end %>
