<h2> Assignment list for <%= @course.name %></h2>
<% @assignments_in_order.each do |a| %>
  <h4><%= a.name %> (id: <%= a.id %>)</h4>
  <%= a.description %> - Date: <%= a.date %><br>
<% end %>
<br>

<% if current_user.admin? || current_user.teacher? %>
  <h3><%= link_to "Upload assignment", new_semester_course_assignment_path(@semester.id, @course.id) %></h3>
<% end %>

<br>
<%= link_to "Go back to #{@course.name}", semester_course_path(@semester, @course) %>
